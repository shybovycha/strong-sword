<!DOCTYPE html>
<html>
<head>
  <title>StrongSword</title>
  <%= stylesheet_link_tag 'moo.css' %>
  <%= stylesheet_link_tag 'humanity/jquery-ui-1.8.8.custom.css' %>
  
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'jquery-ui.js' %>
  <%= javascript_include_tag 'application.js' %>
  
  <%= csrf_meta_tag %>
</head>
<body>

<div class="content">
  <%= yield %>
</div>

<div class='footer'>
  <ul>
    <li><%= link_to t(:home), root_url %></li>
    <li><%= link_to t(:help), "/help/" %></li>
    <li><%= link_to t(:admin_page), "/admin/" %></li>
    <% if logged_in? %>
      <li><%= link_to t(:log_out), "/logout/" %></li>
    <% end %>
  </ul>
</div>

</body>
</html>
