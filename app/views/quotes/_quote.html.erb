<div class="quote" id="<%= quote.id -%>">
  <p class="quote-author"><strong><%= link_to quote.author, author_path(quote.author) -%></strong></p>
  <p class="quote-body"><%= quote.body -%></p>
  <p>
    <%= link_to '#', root_url + quote, :class => "shorten" -%>
    <% if logged_in? -%>
      &nbsp;<%= link_to t(:edit), edit_quote_path(quote) -%>
      &nbsp;<%= link_to t(:delete), quote, :confirm => 'Are you sure?', :method => :delete -%>
      &nbsp;<%= link_to t(:approve), "/quotes/#{quote.id}/approve", :confirm => t(:r_u_sure) -%>
    <% end -%>
  </p>
</div>
<br />

