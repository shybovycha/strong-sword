- if @quote.errors.any?
  :plain
    $('#data_form').html('#{escape_javascript(render(:partial => "form"))}');
- else 
  :plain
    $('#data_grid').prepend('#{escape_javascript(render :partial => "quote", :locals => { :quote => @quote })}');
    $('#quote_author,#quote_body').each(function(i,e) {
      $(this).val("");
    });
